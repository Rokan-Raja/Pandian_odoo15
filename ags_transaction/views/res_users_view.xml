<odoo>
    <data>
        <!-- Inherited Res Users Form View -->
        <record id="res_users_form_view_inherited" model="ir.ui.view">
            <field name="name">res.users.form.view.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='action_id']" position="after">
                    <field name="allow_manual_matching"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>